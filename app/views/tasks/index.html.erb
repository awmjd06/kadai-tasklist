<% if logged_in? %>
  <h1><%= current_user.name %>'s Tasklist</h1>
  
  <%= render 'tasks/tasks', tasks: @tasks %>
  
  <%= link_to "新しいタスクを作成" , new_task_path %>
  
    <% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Tasklistへようこそ！</h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>